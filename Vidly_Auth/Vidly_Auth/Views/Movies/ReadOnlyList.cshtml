@model IEnumerable<Vidly_Auth.Models.Movie>
@{
    ViewBag.Title = "Movies Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Movies list.</h2>

    <div>
        <table id="movies" class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                
            </tbody>
        </table>
    </div>


@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax:
                {
                    url: "api/movies",
                    dataSrc: ""
                },
                columns:
                    [
                        {
                            data: "title"
                        },
                        {
                            data: "genre.name"
                        }
                    ]
            });
        });
    </script>
}
