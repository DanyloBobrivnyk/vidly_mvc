@model Vidly_Auth.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movie</h1>
<h2>@Model.Title</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToShortDateString()</li>
    <li>Adding Date: @Model.DateAdded.ToShortDateString()</li>
    <li>Number in stock: @Model.NumberInStock</li>
</ul>

